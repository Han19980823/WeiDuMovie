<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:background="@mipmap/login_background" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="47dp"
        android:background="@mipmap/back" />

    <EditText
        android:id="@+id/emils"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="328dp"
        android:textColorHint="#999999"
        android:textColor="#999999"
        android:background="@drawable/ed_shape"
        android:hint="      请输入邮箱帐号"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_below="@id/emils"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_shape"
        android:textColorHint="#999999"
        android:textColor="#999999"
        android:hint="      请输入密码"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_below="@id/emils"
        android:layout_alignRight="@id/pwd"
        android:layout_marginTop="10dp"
        android:background="@drawable/forget_shape">

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd"
        android:layout_alignRight="@id/pwd"
        android:layout_marginTop="10dp"
        android:text="暂无帐号 立即注册"
        android:textColor="#999999"
        android:textSize="10sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_below="@id/pwd"
        android:layout_alignLeft="@id/pwd"
        android:layout_marginTop="36dp"
        android:background="@drawable/home_shape1"
        android:textColor="#ffffff"
        android:text="登录" />

    <View
        android:layout_width="93dp"
        android:layout_height="3dp"
        android:layout_below="@id/login"
        android:layout_marginTop="29dp"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/text666"
        android:background="#fff" />

    <TextView
        android:id="@+id/text666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="或"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <View
        android:layout_width="93dp"
        android:layout_height="3dp"
        android:layout_below="@id/login"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@id/text666"
        android:background="#fff" />

    <ImageButton
        android:id="@+id/wechat"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_below="@id/text666"
        android:layout_alignLeft="@id/pwd"
        android:layout_marginTop="20dp"
        android:background="@drawable/wechat_shape"
        android:src="@mipmap/weixin_copy" />
</RelativeLayout>
