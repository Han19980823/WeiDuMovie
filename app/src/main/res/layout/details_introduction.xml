<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:text="剧情简介"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp"
            android:lineSpacingExtra="6sp"
            android:text="改编自漫威漫画，也是漫威电影宇宙第22部影片。复仇者联盟的一众超级英雄，必须抱着牺牲一切的信念，与史上最强大反派灭霸殊死一搏，阻止其摧毁宇宙的邪恶计划。"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_below="@id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:text="演职人员"
            android:textColor="@color/white"
            android:id="@+id/qqq"
            android:textSize="14sp" />

        <TextView
            android:layout_below="@id/qqq"
            android:id="@+id/director_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="导演（2）"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/director_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/director_num"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/actor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/director_recycler"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="演员（67）"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor_num"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
