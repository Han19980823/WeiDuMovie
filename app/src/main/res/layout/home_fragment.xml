<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#141436"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_320"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_sou"
            android:src="@drawable/icon_search"
            android:layout_height="@dimen/dp_25"/>
        <com.xuezj.cardbanner.CardBanner
            android:padding="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>
        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:background="#222250"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/xin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:text="正在热映"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:text="更多"
                android:id="@+id/gengduo1"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:background="#222250"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/quan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:text="即将上映"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:text="更多"
                android:id="@+id/gengduo2"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home1_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:background="#222250"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/huo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="热门电影"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:text="更多"
                android:id="@+id/gengduo3"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img1"
            android:layout_margin="@dimen/dp_10"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recy2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
