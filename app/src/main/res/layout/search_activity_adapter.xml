<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/coming_relat"
        android:layout_width="312dp"
        android:layout_height="121dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#1c2243"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="84dp"
            android:layout_marginLeft="10dp"
            android:layout_height="101dp"
            android:id="@+id/coming_image"
            />
        <TextView
            android:id="@+id/coming_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="悲伤逆流成河"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/coming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="导演：林孝谦"
            android:layout_marginLeft="110dp"
            android:layout_below="@id/coming_name"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/coming_miss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="主演：陈意涵  刘以豪  张书豪  …"
            android:layout_below="@id/coming_time"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginLeft="110dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_scroe"
            android:layout_below="@id/coming_miss"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/coming_miss"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="评分：9.5分"
            />
        <Button
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:id="@+id/coming_but"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#e8185e"
            android:text="购票"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
